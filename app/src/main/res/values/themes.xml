<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Newcalendar" parent="Theme.MaterialComponents.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/classicBlue</item>
        <item name="colorPrimaryVariant">@color/classicBlue</item>
        <item name="colorOnPrimary">@color/classicBlue</item>
        <item name="android:textColorPrimary">@color/classicBlue</item>
        <item name="android:fontFamily">@font/sc_dream4</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>
    <style name="saveToast">
        <item name="stTextBold">true</item>
        <item name="stTextColor">#fff</item>
        <item name="stFont">@font/uhbee_gmin2_bold</item>
        <item name="stTextSize">14sp</item>
        <item name="stColorBackground">@color/lightViolet</item>
        <item name="stSolidBackground">true</item>
        <item name="stStrokeWidth">3dp</item>
        <item name="stStrokeColor">@color/lightViolet</item>
        <item name="stLength">SHORT</item> LONG or SHORT
        <item name="stGravity">center</item> top or center
        <item name="stRadius">20dp</item>
    </style>
    <style name="deleteToast">
        <item name="stTextBold">true</item>
        <item name="stTextColor">#fff</item>
        <item name="stFont">@font/uhbee_gmin2_bold</item>
        <item name="stTextSize">14sp</item>
        <item name="stColorBackground">@color/red</item>
        <item name="stSolidBackground">true</item>
        <item name="stStrokeWidth">3dp</item>
        <item name="stStrokeColor">@color/red</item>
        <item name="stLength">SHORT</item> LONG or SHORT
        <item name="stGravity">center</item> top or center
        <item name="stRadius">20dp</item>
    </style>
    <style name="completeToast">
        <item name="stTextBold">true</item>
        <item name="stTextColor">@color/white</item>
        <item name="stFont">@font/uhbee_gmin2_bold</item>
        <item name="stTextSize">14sp</item>
        <item name="stColorBackground">@color/violet</item>
        <item name="stSolidBackground">true</item>
        <item name="stStrokeWidth">3dp</item>
        <item name="stStrokeColor">@color/violet</item>
        <item name="stIconStart">@drawable/event</item>
        <item name="stIconEnd">@drawable/event</item>
        <item name="stLength">SHORT</item> LONG or SHORT
        <item name="stGravity">top</item> top or center
        <item name="stRadius">20dp</item>
    </style>
    <style name="CalendarWidgetHeader">
        <item name="android:textSize">15sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:fontFamily">@font/uhbee_gmin2_bold</item>
    </style>
    <style name="CalendarWidgetWeek">
        <item name="android:textSize">15sp</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:fontFamily">@font/uhbee_gmin2</item>
    </style>

</resources>